@using Microsoft.AspNetCore.Identity
@model IEnumerable<IdentityRole>

@{
    ViewData["Title"] = "Список ролей пользователей";
}
<h1>Роли</h1>
<p>
    <a asp-controller="Roles" asp-action="CreateRole" class="btn btn-primary" title="Создать роль">Создать</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>@Html.DisplayNameFor(model => model.Id)</th>
            <th>@Html.DisplayNameFor(model => model.Name)</th>
            <th>@Html.DisplayNameFor(model => model.NormalizedName)</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@Html.DisplayFor(modelitem => item.Id)</td>
                <td>@Html.DisplayFor(modelitem => item.Name)</td>
                <td>@Html.DisplayFor(modelitem => item.NormalizedName)</td>
                @if (User.IsInRole("Admin"))
                {
                    <td>
                        <a asp-controller="Roles" asp-action="DeleteRole" asp-route-id="@item.Id" class="btn btn-primary" title="Удалить роль">Удалить</a>
                    </td>
                }
            </tr>
        }
    </tbody>
</table>
