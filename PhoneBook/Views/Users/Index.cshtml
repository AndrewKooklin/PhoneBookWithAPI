@using Microsoft.AspNetCore.Identity
@model IEnumerable<IdentityUser>

@{
    ViewData["Title"] = "Список пользователей";
}
<h1>@ViewData["Title"]</h1>
@*<p>
        <a asp-controller="Roles" asp-action="CreateRole" class="btn btn-primary" title="Создать роль">Создать</a>
    </p>*@
<table class="table">
    <thead>
        <tr>
            <th>@Html.DisplayNameFor(model => model.Id)</th>
            <th>@Html.DisplayNameFor(model => model.UserName)</th>
            <th>@Html.DisplayNameFor(model => model.Email)</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@Html.DisplayFor(modelitem => item.Id)</td>
                <td>@Html.DisplayFor(modelitem => item.UserName)</td>
                <td>@Html.DisplayFor(modelitem => item.Email)</td>
                @if (User.IsInRole("Admin"))
                {
                    <td>
                        <a asp-controller="Users" asp-action="DeleteUser" asp-route-id="@item.Id" class="btn btn-primary" title="Удалить пользователя">Удалить</a>
                    </td>
                }
            </tr>
        }
    </tbody>
</table>

