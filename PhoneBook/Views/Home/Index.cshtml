@model IEnumerable<PhoneBookRecord>
@inject SignInManager<IdentityUser> SignInManager
<h2>PhoneBook</h2>

@if (SignInManager.IsSignedIn(User))
{
    <div>
        <a class="btn btn-primary" asp-controller="CreateRecord" asp-action="Create" title="Создать запись">Создать</a>
    </div>
    <div>
        <p>&nbsp;</p>
    </div>
}
    <table class="table">
        <thead>
            <tr>
                <th>ID</th>
                <th>LastName</th>
                <th>FirstName</th>
                <th>FathresName</th>
            </tr>
        </thead>
        <tbody>
            @if (Model.Any())
            {
                @foreach (PhoneBookRecord item in Model)
                {
            <tr>
                <td>
                    <a asp-controller="Details"
                       asp-action="DetailsShow"
                       asp-route-id="@item.Id"
                       title="Просмотреть"
                       class="linkDetails">@item.Id</a>
                </td>
                <td>@item.LastName</td>
                <td>@item.FirstName</td>
                <td>@item.FathersName</td>
                @if (User.IsInRole("Admin"))
                {
                    <td>
                        <a class="btn btn-dark" asp-controller="DeleteRecord"
                                                asp-action="Index"
                                                asp-route-id="@item.Id"
                                                title="Удалить">Удалить</a>
                    </td>
                }
                </tr>
                }
            }
        </tbody>
    </table>


